<html>
<head>
   <style>
      $style
   </style>
</head>
<body>
$header<br><br>
<table class="objecttable">
    <thead><tr><th>$title</th><th>$task.name</th></tr><thead>
    <tbody>
      <tr>
		    <td>acceptorName: $asignee</td>
			  <td>creator: $creator</td>
      </tr>
      <tr>
         <td colspan="2"><a href="$hostUrl/do/view/task?oid=$task.id">$task.name</a></td>
      </tr>
		</tbody>
</table>
<table class="objecttable">
		<thead>
			<tr>
				<th>Field name</th>
				<th>Original task</th>
				<th>Updated task</th>
			</tr>
		</thead>
