<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
              "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
              "http://struts.apache.org/dtds/struts-config_1_2.dtd">
<struts-config>
  <!-- ========== Global Forward Definitions ============================== -->
  <global-forwards type="org.apache.struts.action.ActionForward">
  </global-forwards>


  <!-- ========== Action Mapping Definitions ============================== -->
  <action-mappings>
    <action path="/edit/dataSample" />

    <action path="/edit/missingTimeEntryNotification" />

    <action path="/edit/putTheClockForward" />

    <action path="/edit/properties" name="edit/properties" />

    <action path="/invalidateCache" input="/WEB-INF/jsp/admin/invalidateCache.jsp" />

    <action path="/invalidateHibernateCache" input="/WEB-INF/jsp/admin/invalidateCache.jsp" />

  </action-mappings>

</struts-config>